<?xml version='1.0' encoding='utf-8'?>
<widget id="com.carloshglez.asteroids" version="1.3.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Chronoverse</name>
    <description>
        Implementation of an asteroids game using agile development tools for Web and Mobile.
    </description>
    <author email="carlos3349@gmail.com" href="https://github.com/carloshglez/chronoverse.git">
        carloshglez
    </author>
    <preference name="Orientation" value="landscape" />
    <preference name="Fullscreen" value="true" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="www/webapp/icon.png" />
        <custom-preference name="android-manifest/application/@android:hardwareAccelerated" value="true" />
        <custom-preference name="android-manifest/@android:hardwareAccelerated" value="true" />
        <preference name="android-targetSdkVersion" value="28" />
        <preference name="android-minSdkVersion" value="19" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon src="www/webapp/icon.png" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-custom-config" spec="^5.0.2" />
</widget>
