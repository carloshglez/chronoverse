<?xml version='1.0' encoding='utf-8'?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="com.carloshglez.asteroids" 
    version="1.3.2">
    <name>Chronoverse</name>
    <description>
        Implementation of an asteroids game using agile development tools for Web and Mobile.
    </description>
    <author email="carlos3349@gmail.com" href="https://github.com/carloshglez/chronoverse.git">
        carloshglez
    </author>
    <preference name="Orientation" value="landscape" />
    <preference name="Fullscreen" value="true" />
    <content src="index.html" />
    <platform name="android">
        <icon background="www/res/mipmap-ldpi/ic_launcher_background.png"    foreground="www/res/mipmap-ldpi/ic_launcher_foreground.png"     density="ldpi"   />
        <icon background="www/res/mipmap-mdpi/ic_launcher_background.png"    foreground="www/res/mipmap-mdpi/ic_launcher_foreground.png"     density="mdpi"   />
        <icon background="www/res/mipmap-hdpi/ic_launcher_background.png"    foreground="www/res/mipmap-hdpi/ic_launcher_foreground.png"     density="hdpi"   />
        <icon background="www/res/mipmap-xhdpi/ic_launcher_background.png"   foreground="www/res/mipmap-xhdpi/ic_launcher_foreground.png"    density="xhdpi"  />
        <icon background="www/res/mipmap-xxhdpi/ic_launcher_background.png"  foreground="www/res/mipmap-xxhdpi/ic_launcher_foreground.png"   density="xxhdpi" />
        <icon background="www/res/mipmap-xxxhdpi/ic_launcher_background.png" foreground="www/res/mipmap-xxxhdpi/ic_launcher_foreground.png"  density="xxxhdpi"/>
        <custom-preference name="android-manifest/application/@android:hardwareAccelerated" value="true" />
        <custom-preference name="android-manifest/@android:hardwareAccelerated" value="true" />
        <preference name="android-targetSdkVersion" value="33" />
        <preference name="android-minSdkVersion" value="21" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon src="www/webapp/icon.png" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-custom-config" spec="^5.0.2" />
</widget>
